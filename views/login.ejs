<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login de Parceiro - Pagjunto</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
        <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">
    <style>
        :root {
            --primary: #2563eb;
            --primary-hover: #1d4ed8;
            --bg: #f9fafb;
            --card: #ffffff;
            --text-header: #111827;
            --text-body: #374151;
            --text-muted: #6b7280;
            --border: #e5e7eb;
            --shadow: 0 8px 25px rgba(37, 99, 235, 0.08);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg);
            color: var(--text-body);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .login-container {
            display: flex;
            width: 100%;
            max-width: 1000px;
            min-height: 600px;
            background: var(--card);
            border-radius: 20px;
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        /* Lado Esquerdo (Informações) */
        .login-info {
            flex-basis: 50%;
            background: linear-gradient(135deg, var(--primary), var(--primary-hover));
            color: white;
            padding: 60px 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            text-align: center;
        }

        .login-info h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            line-height: 1.2;
        }

        .login-info p {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 2rem;
        }

        .info-logo {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 2rem;
        }

        .info-logo i {
            margin-right: 10px;
            transform: rotate(-15deg);
        }

        /* Lado Direito (Formulário) */
        .login-form {
            flex-basis: 50%;
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        .login-form h2 {
            font-size: 1.8rem;
            color: var(--text-header);
            margin-bottom: 10px;
        }

        .login-form .subtitle {
            color: var(--text-muted);
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-group label {
            display: block;
            font-weight: 500;
            margin-bottom: 8px;
            font-size: 0.9rem;
            color: var(--text-body);
        }

        .form-group input {
            width: 100%;
            padding: 14px 14px 14px 45px; /* Espaço para o ícone */
            font-size: 1rem;
            color: var(--text-body);
            background-color: var(--bg);
            border: 1px solid var(--border);
            border-radius: 10px;
            transition: border-color 0.2s, box-shadow 0.2s;
        }
        
        .form-group input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.2);
        }

        .form-group .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            pointer-events: none; /* Para não interferir com o clique no input */
        }
        
        /* Ajuste para o ícone quando o input tem label */
        .form-group label + .input-icon {
            top: calc(50% + 12px);
        }

        #toggle-password {
            position: absolute;
            right: 15px;
            top: calc(50% + 12px);
            transform: translateY(-50%);
            color: var(--text-muted);
            cursor: pointer;
        }

        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            font-size: 0.9rem;
        }

        .form-options .remember-me {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
        }
        
        .form-options a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }
        
        .form-options a:hover {
            text-decoration: underline;
        }

        .btn-login {
            background-color: var(--primary);
            color: white;
            font-size: 1rem;
            padding: 15px;
            width: 100%;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.2s, transform 0.2s;
        }

        .btn-login:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
        }
        
        footer {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 0.8rem;
            color: var(--text-muted);
        }
        
        /* Responsividade */
        @media (max-width: 900px) {
            .login-container {
                flex-direction: column;
                width: 90%;
                max-width: 450px;
                min-height: auto;
            }
            .login-info {
                display: none; /* Oculta a parte azul em telas menores para focar no formulário */
            }
            .login-form {
                padding: 40px 30px;
            }
            footer {
                display: none;
            }
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-info">
            <div class="info-logo">
                 pagjunto
            </div>
            <h1>Bem-vindo de volta, Parceiro!</h1>
            <p>Gerencie suas cobranças, visualize pagamentos e impulsione seu negócio conosco.</p>
        </div>

        <div class="login-form">
            <h2>Acesse sua Conta</h2>
            <p class="subtitle">Bem-vindo! Por favor, insira seus dados.</p>

            <form id="partner-login-form">
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <i class="fas fa-envelope input-icon"></i>
                    <input type="email" id="email" name="email" placeholder="seuemail@empresa.com" required>
                </div>
                
                <div class="form-group">
                    <label for="password">Senha</label>
                    <i class="fas fa-lock input-icon"></i>
                    <input type="password" id="password" name="password" placeholder="Sua senha" required>
                    <i class="fas fa-eye" id="toggle-password"></i>
                </div>

                <div class="form-options">
                    <div class="remember-me">
                        <input type="checkbox" id="remember" name="remember">
                        <label for="remember">Lembrar-me</label>
                    </div>
                    <a href="#">Esqueceu a senha?</a>
                </div>

                    <div id="login-message" style="display:none; margin-top: 15px; padding: 12px; border-radius: 8px; font-size: 0.9rem; margin-bottom: 15px;"></div>

                    <button type="submit" class="btn-login">Entrar</button>
            </form>
        </div>
    </div>
    
    <footer>
        © 2025 Pagjunto. Todos os direitos reservados.
    </footer>

<script>
    const togglePassword = document.getElementById('toggle-password');
    const passwordInput = document.getElementById('password');
    const loginMessage = document.getElementById('login-message');

    togglePassword.addEventListener('click', function () {
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        this.classList.toggle('fa-eye');
        this.classList.toggle('fa-eye-slash');
    });

    function showMessage(msg, type = 'error') {
        loginMessage.textContent = msg;
        loginMessage.style.display = 'block';
        loginMessage.style.backgroundColor = type === 'error' ? '#fee2e2' : '#d1fae5';
        loginMessage.style.color = type === 'error' ? '#991b1b' : '#065f46';
        loginMessage.style.border = `1px solid ${type === 'error' ? '#fca5a5' : '#34d399'}`;
        
        setTimeout(() => {
            loginMessage.style.display = 'none';
        }, 5000); // desaparece após 5s
    }

    const loginForm = document.getElementById('partner-login-form');
    loginForm.addEventListener('submit', async function(event) {
        event.preventDefault();

        const email = document.getElementById('email').value;
        const senha = document.getElementById('password').value;

        try {
            const response = await fetch('/signin', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email, senha })
            });

            const resultado = await response.json();

            if (response.status === 200) {
                showMessage("Login bem-sucedido! Redirecionando...", "success");
                setTimeout(() => {
                    window.location.href = "/dashboard";
                }, 1500);
            } else {
                showMessage(resultado.erro || "Erro desconhecido ao fazer login");
            }
        } catch (err) {
            console.error('Erro ao fazer login:', err);
            showMessage("Erro de rede ou servidor. Tente novamente.");
        }
    });
</script>



</body>
</html>