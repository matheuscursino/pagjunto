<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Pagamento - Pagjunto</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style>
    :root {
      --primary: #4f46e5;
      --bg: #f9fafb;
      --card: #fff;
      --text: #1f2937;
      --subtext: #6b7280;
      --border: #e5e7eb;
    }

    body {
      font-family: 'Inter', sans-serif;
      margin: 0;
      background-color: var(--bg);
      color: var(--text);
    }

    header {
      background: white;
      padding: 20px 40px;
      border-bottom: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header .logo {
      font-weight: 700;
      font-size: 24px;
      color: var(--primary);
    }

    main {
      max-width: 1100px;
      margin: 40px auto;
      display: flex;
      gap: 30px;
      flex-wrap: wrap;
      padding: 0 20px;
    }

    .card {
      background: var(--card);
      border-radius: 16px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.05);
      padding: 30px;
      flex: 1;
      min-width: 320px;
    }

    .section-title {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .info-group {
      margin-bottom: 15px;
    }

    .info-group label {
      font-weight: 500;
      color: var(--subtext);
      font-size: 15px;
    }

    .info-group span {
      display: block;
      font-size: 18px;
      font-weight: 600;
      color: var(--primary);
    }

    .progress {
      background-color: #e5e7eb;
      height: 12px;
      border-radius: 6px;
      overflow: hidden;
      margin-top: 10px;
    }

    .progress-fill {
      height: 100%;
      background: linear-gradient(to right, var(--primary), #6366f1);
      width: <%= (orderData.paidValue / orderData.totalValue) * 100 %>%;
    }

    input[type="number"],
    input[type="text"] {
      width: 100%;
      padding: 14px;
      font-size: 16px;
      margin-top: 10px;
      margin-bottom: 20px;
      border: 1px solid var(--border);
      border-radius: 10px;
    }

    button {
      background-color: var(--primary);
      color: white;
      font-size: 16px;
      padding: 14px;
      width: 100%;
      border: none;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
    }

    button:hover {
      background-color: #4338ca;
    }

    .qr-container {
      text-align: center;
      margin-top: 30px;
      display: none;
    }

    .qr-container img {
      max-width: 200px;
      margin-bottom: 10px;
    }

    footer {
      text-align: center;
      padding: 20px;
      font-size: 14px;
      color: var(--subtext);
      border-top: 1px solid var(--border);
      margin-top: 40px;
    }

    @media (max-width: 768px) {
      main {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>

  <header>
    <div class="logo"><i class="fas fa-building"></i> Pagjunto</div>
    <div>Pagamento Compartilho</div>
  </header>

  <main>
    <!-- RESUMO DO PEDIDO -->
    <div class="card">
      <div class="section-title"><i class="fas fa-file-invoice"></i> Resumo do Pedido</div>
      <div class="info-group">
        <label>Valor total</label>
        <span>R$ <%= orderData.totalValue.toFixed(2) %></span>
      </div>
      <div class="info-group">
        <label>Valor já pago</label>
        <span>R$ <%= orderData.paidValue.toFixed(2) %></span>
      </div>
      <div class="info-group">
        <label>Pagamentos realizados</label>
        <span><%= orderData.paymentsNumber %></span>
      </div>
      <div class="progress">
        <div class="progress-fill"></div>
      </div>
    </div>

    <!-- PAGAMENTO -->
    <div class="card">
      <div class="section-title"><i class="fas fa-coins"></i> Realizar Pagamento</div>

      <label for="cpf">Informe seu CPF:</label>
      <input type="text" id="cpf" placeholder="Ex: 123.456.789-00" maxlength="14" />

      <label for="valor">Digite o valor que deseja pagar:</label>
      <input type="number" id="valor" placeholder="Ex: 50.00" min="1" step="0.01" />

      <button onclick="gerarPix()">Gerar QR Code Pix</button>

      <div class="qr-container" id="qrBox">
        <p>Escaneie o QR Code com seu banco:</p>
        <img src="https://api.qrserver.com/v1/create-qr-code/?data=chavepixficticia123&size=200x200" alt="QR Code Pix" />
        <p><small>Chave Pix: chavepixficticia123</small></p>
      </div>
    </div>
  </main>

  <footer>
    © 2025 Pagjunto — Suporte: suporte@pagjunto.com
  </footer>

  <script>
    function gerarPix() {
      const valor = parseFloat(document.getElementById("valor").value);
      const cpf = document.getElementById("cpf").value.trim();

      if (!cpf) {
        alert("Por favor, informe seu CPF.");
        return;
      }

      if (!valor || valor <= 0) {
        alert("Insira um valor válido.");
        return;
      }

      document.getElementById("qrBox").style.display = "block";
    }
  </script>

</body>
</html>
