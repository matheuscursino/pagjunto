.feature-icon {
    width: 64px;
    height: 64px;
    border-radius: var(--radius);
    background: var(--gradient-accent);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin: 0 auto 24px;
    transition: all 0.3s ease;
    box-shadow: 0 8px 32px rgba(37, 99, 235, 0.3);
}

.feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 12px 48px rgba(37, 99, 235, 0.4);
}

.feature-card h3 {
    margin-bottom: 16px;
    font-size: 1.5rem;
}

.feature-card p {
    color: var(--text-secondary);
    line-height: 1.6;
}

/* Benefits Section */
.benefits {
    background: linear-gradient(180deg, #ffffff 0%, rgba(248, 250, 252, 0.5) 100%);
    position: relative;
}

.benefits::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at bottom left, rgba(30, 64, 175, 0.03) 0%, transparent 70%);
    pointer-events: none;
}

.benefit-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 80px;
    margin-bottom: 120px;
    position: relative;
    z-index: 2;
}

.benefit-item:last-child {
    margin-bottom: 0;
}

.benefit-item:nth-child(even) .benefit-image {
    grid-column: 2;
}

.benefit-item:nth-child(even) .benefit-content {
    grid-column: 1;
}

.benefit-image {
    background: linear-gradient(145deg, rgba(248, 250, 252, 0.8), rgba(255, 255, 255, 0.9));
    border-radius: var(--radius-lg);
    padding: 80px 40px;
    text-align: center;
    border: 1px solid rgba(226, 232, 240, 0.3);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 300px;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 32px rgba(30, 64, 175, 0.08);
}

.benefit-image:hover {
    transform: scale(1.02) rotate(1deg);
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.9), rgba(248, 250, 252, 0.9));
    box-shadow: 0 20px 40px rgba(30, 64, 175, 0.15);
}

.benefit-image i {
    font-size: 5rem;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    opacity: 0.8;
    animation: bounce 3s ease-in-out infinite;
}

