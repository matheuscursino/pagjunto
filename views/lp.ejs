    height: 2px;
    background-color: var(--text-primary);
    position: relative;
    transition: all 0.3s ease;
}

.mobile-nav-toggle .hamburger::before,
.mobile-nav-toggle .hamburger::after {
    content: '';
    position: absolute;
    width: 24px;
    height: 2px;
    background-color: var(--text-primary);
    left: 0;
    transition: all 0.3s ease;
}

.mobile-nav-toggle .hamburger::before {
    top: -8px;
