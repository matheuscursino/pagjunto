    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            // --- Sticky Header ---
            const header = document.getElementById('main-header');
            if (header) {
                window.addEventListener('scroll', () => {
                    if (window.scrollY > 50) {
                        header.classList.add('is-scrolled');
                    } else {
                        header.classList.remove('is-scrolled');
                    }
                });
            }

            // --- Mockup Animation Logic ---
            const heroMockup = document.querySelector('.hero-mockup-wrapper');
            let mockupAnimated = false;

            const animateMockup = () => {
                if (mockupAnimated) return;
                mockupAnimated = true;

                const progressRing = document.getElementById('progressRing');
                const paidValueSpan = document.getElementById('paidValueSpan');
                const payersList = document.getElementById('payersList');
                const payersCount = document.getElementById('payersCount');
                
                const radius = progressRing.r.baseVal.value;
                const circumference = 2 * Math.PI * radius;
                
                progressRing.style.strokeDasharray = `${circumference} ${circumference}`;
                progressRing.style.strokeDashoffset = circumference;

                const mockPayers = [
                    { name: 'Ana Silva', value: 120 },
                    { name: 'Bruno Costa', value: 80 },
                    { name: 'Carla Dias', value: 100 }
                ];
                const totalPaid = mockPayers.reduce((sum, p) => sum + p.value, 0);
                const totalValue = 400;
                const progressPercentage = totalPaid / totalValue;

                // Animate progress ring
                setTimeout(() => {
                    progressRing.style.strokeDashoffset = circumference - progressPercentage * circumference;
                }, 100);

                // Animate paid value counter
                let startTimestamp = null;
                const duration = 1500;
                const step = (timestamp) => {
                    if (!startTimestamp) startTimestamp = timestamp;
                    const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                    const currentValue = progress * totalPaid;
                    paidValueSpan.textContent = `R$ ${currentValue.toFixed(2).replace('.', ',')}`;
                    if (progress < 1) {
                        window.requestAnimationFrame(step);
                    }
                };
                window.requestAnimationFrame(step);

                // Animate payers list
                payersList.innerHTML = '';
                payersCount.textContent = '0';
                mockPayers.forEach((payer, index) => {
                    setTimeout(() => {
                        const item = document.createElement('div');
                        item.className = 'payer-item';
                        item.style.animationDelay = `${index * 150}ms`;
                        item.innerHTML = `
                            <div class="payer-info">
                                <div class="payer-avatar">${payer.name.charAt(0)}</div>
                                <span class="payer-name">${payer.name}</span>
                            </div>
                            <span class="payer-value">R$ ${payer.value.toFixed(2).replace('.', ',')}</span>
                        `;
                        payersList.appendChild(item);
                        payersCount.textContent = index + 1;
                    }, 500 + index * 300);
                });
            };


            // --- Intersection Observer for Animations ---
            const sections = document.querySelectorAll('.fade-in-section');
            const observerOptions = { root: null, rootMargin: '0px', threshold: 0.1 };
            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                        
                        if (entry.target.classList.contains('hero-mockup-wrapper')) {
                            animateMockup();
                        }

                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                observer.observe(section);
            });

            // --- Smooth scrolling for anchor links ---
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    if(targetElement) {
                        targetElement.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            });

            // --- Original Form Submission Logic ---
            const contactForm = document.querySelector('.contact-form');
            if(contactForm) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    const form = e.target;
                    const formData = new FormData(form);
                    const url = form.action;
                    const submitBtn = form.querySelector('.btn-primary');
                    const btnText = submitBtn.querySelector('.btn-text');
                    const originalText = btnText.innerHTML;

                    btnText.innerHTML = 'Enviando...';
                    submitBtn.disabled = true;
                    
                    fetch(url, {
                        method: 'POST',
                        body: formData,
                        mode: 'no-cors'
                    }).then(() => {
                        btnText.innerHTML = 'Mensagem Enviada!';
                        submitBtn.style.backgroundColor = 'var(--success)';
                        submitBtn.style.borderColor = 'var(--success)';
                        
                        setTimeout(() => {
                            submitBtn.classList.remove('is-loading');
                            btnText.innerHTML = originalText;
                            submitBtn.disabled = false;
                            submitBtn.style.backgroundColor = '';
                            submitBtn.style.borderColor = '';
                            form.reset();
                        }, 3000);

                    }).catch(error => {
                        console.error('Form submission error:', error);
                        btnText.innerHTML = 'Erro ao enviar';
                        setTimeout(() => {
                            submitBtn.classList.remove('is-loading');
                            btnText.innerHTML = originalText;
                            submitBtn.disabled = false;
                        }, 3000);
                    });
                });
            }
        });
    </script>
