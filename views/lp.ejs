    .business-showcase,
    .app-showcase {
        grid-template-columns: 1fr;
        gap: 60px;
    }
    
    .contact-grid {
        grid-template-columns: 1fr;
        gap: 60px;
    }
    
    .use-cases {
        grid-template-columns: 1fr;
    }
    
    .integration-steps {
        grid-template-columns: 1fr;
        gap: 20px;
