// Simulate payment
function simulatePayment() {
    const paymentStatus = document.getElementById('payment-status');
    
    // Show processing
    paymentStatus.classList.add('processing');
    paymentStatus.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processando pagamento...';
    
    setTimeout(() => {
        // Show success
        paymentStatus.classList.remove('processing');
        paymentStatus.classList.add('success');
        paymentStatus.innerHTML = '<i class="fas fa-check-circle"></i> Pagamento Aprovado!';
        
        // Update payment data
        const paymentAmount = window.currentPaymentAmount;
        const paymentName = window.currentPaymentName;
        
        paidAmount += paymentAmount;
        contributors.push({
            name: paymentName,
            amount: paymentAmount
        });
        
        // Redirect back to payment page after 2 seconds
        setTimeout(() => {
            showPaymentPage();
        }, 2000);
        
    }, 2000);
}

