    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        /* ------------------- */
        /* --- CSS Reset & Variables --- */
        /* ------------------- */
        :root {
            --bg-light: #FFFFFF;
            --bg-secondary: #F9FAFB;
            --bg-dark: #0A0A0A;
            --text-light: #F5F5F7;
            --text-dark: #1D1D1F;
            --text-muted-light: #A1A1A6;
            --text-muted-dark: #555555;
            
            /* --- Paleta de Cores Corporativa --- */
            --accent: #0066CC; /* Azul corporativo */
            --accent-hover: #0052A3;
            --success: #16a34a; /* Verde para sucesso */
            --secondary-accent: #E5E7EB; /* Cinza claro para elementos secundários */
            --border-light: #E5E5E5;
            --border-dark: #2A2A2A;

            --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;

            --section-padding: clamp(5rem, 10vw, 8rem);
        }

        *, *::before, *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html {
            scroll-behavior: smooth;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        body {
            background-color: var(--bg-light);
            color: var(--text-dark);
            font-family: var(--font-sans);
            line-height: 1.7;
            font-size: 17px;
            position: relative;
        }

        /* --- Animated Ethereal Aura Background --- */
        .gradient-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

        .gradient-blob {
            position: absolute;
            border-radius: 50%;
            filter: blur(100px);
            opacity: 0.3;
        }

        .blob1 {
            width: 500px;
            height: 500px;
            background: #ffc3a0;
            animation: move 25s infinite alternate;
        }

        .blob2 {
            width: 400px;
            height: 400px;
            background: #c471ed;
            animation: move 30s infinite alternate-reverse;
        }

        .blob3 {
            width: 300px;
            height: 300px;
            background: #12c2e9;
            animation: move 20s infinite alternate;
        }

        @keyframes move {
            0% { transform: translate(-100px, -50px) scale(1); }
            50% { transform: translate(200px, 100px) scale(1.2); }
            100% { transform: translate(50px, -150px) scale(0.9); }
        }


        /* ------------------- */
        /* --- Layout & Typography --- */
        /* ------------------- */
        .container {
            width: 100%;
            max-width: 1140px;
            margin-left: auto;
            margin-right: auto;
            padding-left: 1.5rem;
            padding-right: 1.5rem;
        }

        section {
            padding-top: var(--section-padding);
            padding-bottom: var(--section-padding);
            position: relative;
            z-index: 1;
        }
        
        .section-content {
            max-width: 960px;
            margin: 0 auto;
            text-align: center;
        }

        h1, h2, h3, h4 {
            font-weight: 700;
            line-height: 1.25;
            letter-spacing: -0.03em;
            color: var(--text-dark);
        }

        h1 {
            font-size: clamp(2.8rem, 5.5vw, 4rem);
            font-weight: 800;
            color: var(--text-dark); /* Cor sólida */
        }
        
        h2 {
            font-size: clamp(2.25rem, 4.5vw, 3.25rem);
            margin-bottom: 1.5rem;
        }
        
        h3 {
            font-size: 1.35rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
        }

        h4 {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        p {
            max-width: 65ch;
            color: var(--text-muted-dark);
            margin-left: auto;
            margin-right: auto;
        }
        
        .section-header {
            margin-bottom: 5rem;
        }
        .section-header p {
            font-size: 1.15rem;
            max-width: 55ch;
            margin-top: 1.5rem;
        }

        /* ------------------- */
        /* --- Header / Navigation --- */
        /* ------------------- */
        .main-header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            padding: 1.25rem 0;
            z-index: 1000;
            transition: background-color 0.3s ease, border-bottom-color 0.3s ease, backdrop-filter 0.3s ease;
            border-bottom: 1px solid transparent;
        }
        .main-header.is-scrolled {
            background-color: rgba(255, 255, 255, 0.8);
            -webkit-backdrop-filter: blur(10px);
            backdrop-filter: blur(10px);
            border-bottom-color: var(--border-light);
        }
        .main-header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo {
            font-weight: 700;
            font-size: 1.3rem;
            text-decoration: none;
            color: var(--text-dark);
        }
        .main-nav {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }
        .main-nav a:not(.btn) {
            text-decoration: none;
            color: var(--text-muted-dark);
            font-weight: 500;
            font-size: 1rem;
            transition: color 0.2s ease;
            padding: 0.5rem;
        }
        .main-nav a:not(.btn):hover {
            color: var(--text-dark);
        }

        /* ------------------- */
        /* --- Animation Utilities --- */
        /* ------------------- */
        .fade-in-section {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.8s cubic-bezier(0.2, 1, 0.8, 1), transform 0.8s cubic-bezier(0.2, 1, 0.8, 1);
        }

        .fade-in-section.is-visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* ------------------- */
        /* --- Hero Section & Interactive Demo --- */
        /* ------------------- */
        .hero {
            min-height: 100vh;
            padding-top: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            background: transparent;
        }
        
        .hero .container {
            display: grid;
            grid-template-columns: 1fr;
            align-items: center;
            gap: 4rem;
        }

        .hero-text {
            text-align: center;
        }
        
        .hero .lead {
            font-size: 1.25rem;
            margin-top: 1.5rem;
            color: var(--text-muted-dark);
            max-width: 50ch;
        }

        .hero-mockup-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .phone-mockup {
            width: 100%;
            max-width: 340px;
            height: 680px;
            background: #181818;
            border-radius: 44px;
            padding: 12px;
            box-shadow: 0 25px 60px -15px rgba(0, 0, 0, 0.2), 0 0 0 1px rgba(0,0,0,0.1);
            position: relative;
        }

        .phone-screen {
            background-color: #f7f8fa;
            width: 100%;
            height: 100%;
            border-radius: 32px;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            padding: 1rem;
        }

        .mockup-header {
            text-align: center;
            padding: 1rem;
            font-weight: 700;
            font-size: 1.25rem;
            color: var(--text-dark);
        }
        .mockup-header span {
            color: var(--accent);
        }

        .progress-container-mockup {
            flex-grow: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .progress-ring { transform: rotate(-90deg); }
        .progress-ring circle { transition: stroke-dashoffset 1.5s cubic-bezier(0.6, 0, 0.1, 1); }
        .progress-ring-bg { stroke: #e9eef2; }
        .progress-ring-fg { stroke: var(--accent); }

        .progress-info {
            position: absolute;
            text-align: center;
            pointer-events: none;
        }
        .progress-info .label {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: var(--text-muted-dark);
        }
        .progress-info .paid-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-dark);
            margin: 0.25rem 0;
        }
        .progress-info .total-value {
            font-size: 0.8rem;
            color: var(--text-muted-dark);
        }

        .payers-list-container-mockup {
            padding: 0 1rem 1rem;
            height: 180px;
        }
        .payers-list-container-mockup h3 {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.75rem;
            text-align: left;
        }
        .payers-list-mockup {
            max-height: 150px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            padding-right: 0.5rem;
        }
        .payers-list-mockup::-webkit-scrollbar { width: 4px; }
        .payers-list-mockup::-webkit-scrollbar-track { background: transparent; }
        .payers-list-mockup::-webkit-scrollbar-thumb { background: #dce1e6; border-radius: 4px; }
        
        .payer-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #fff;
            padding: 0.6rem 0.8rem;
            border-radius: 10px;
            border: 1px solid #e9eef2;
            opacity: 0;
            transform: translateX(-20px);
            animation: slide-in-item 0.6s cubic-bezier(0.2, 1, 0.2, 1) forwards;
        }
        @keyframes slide-in-item {
            to { opacity: 1; transform: translateX(0); }
        }

        .payer-info { display: flex; align-items: center; gap: 0.75rem; }
        .payer-avatar {
            width: 32px; height: 32px; border-radius: 50%;
            background: var(--secondary-accent);
            display: flex; justify-content: center; align-items: center;
            font-weight: 600; color: var(--text-dark); font-size: 0.9rem;
            border: none;
        }
        .payer-name { font-size: 0.9rem; font-weight: 500; color: var(--text-dark); }
        .payer-value { font-size: 0.9rem; font-weight: 600; color: var(--success); }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-family: var(--font-sans);
            font-size: 1.05rem;
            font-weight: 600;
            padding: 1rem 2rem;
            border-radius: 12px;
            border: none;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s ease-in-out;
            letter-spacing: 0.01em;
            width: auto;
            position: relative;
        }
        
        .btn-primary {
            background-color: var(--accent);
            color: white;
        }
        .btn-primary:hover {
            background-color: var(--accent-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 102, 204, 0.2);
        }
        .btn:active { transform: translateY(0px) scale(0.97); }

        .btn-nav {
            font-size: 1rem;
            padding: 0.75rem 1.5rem;
            width: auto;
        }
        
        /* ------------------- */
        /* --- How It Works Section --- */
        /* ------------------- */
        #how-it-works {
            background-color: var(--bg-secondary);
        }
        .steps-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 2.5rem;
            text-align: left;
        }
        .step-card {
            background: var(--bg-light);
            padding: 2rem;
            border-radius: 20px;
            border: 1px solid var(--border-light);
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
        .step-card .step-icon {
            flex-shrink: 0;
            width: 56px;
            height: 56px;
            border-radius: 16px;
            background-color: var(--accent);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 10px rgba(0, 102, 204, 0.2);
        }
        .step-card h4 {
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
        }
        .step-card p {
            font-size: 1rem;
            color: var(--text-muted-dark);
            margin: 0;
        }

        /* ------------------- */
        /* --- Testimonials Section --- */
        /* ------------------- */
        .testimonials-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem;
        }
        .testimonial-card {
            background-color: var(--bg-light);
            padding: 2rem;
            border-radius: 20px;
            border: 1px solid var(--border-light);
            text-align: left;
        }
        .testimonial-card p {
            margin: 0 0 1.5rem 0;
            font-size: 1.1rem;
            line-height: 1.6;
            color: var(--text-dark);
        }
        .testimonial-author {
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        .author-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            object-fit: cover;
            background-color: var(--accent);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
        .author-info h5 {
            font-size: 1rem;
            font-weight: 600;
            color: var(--text-dark);
            margin: 0;
        }
        .author-info span {
            font-size: 0.9rem;
            color: var(--text-muted-dark);
        }

        /* ------------------- */
        /* --- Final CTA Section --- */
        /* ------------------- */
        #cta-final {
            background-color: var(--bg-dark);
            padding: var(--section-padding) 0;
        }
        #cta-final h2, #cta-final p { color: var(--text-light); }
        #cta-final p { color: var(--text-muted-light); }
        .app-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2.5rem;
            flex-wrap: wrap;
        }
        
        /* ------------------- */
        /* --- Footer --- */
        /* ------------------- */
        footer {
            padding: 5rem 0;
            background-color: var(--bg-dark);
            color: var(--text-muted-light);
            border-top: 1px solid var(--border-dark);
        }
        footer .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1.5rem;
            text-align: center;
        }
        footer .logo {
            color: var(--text-light);
        }
        footer p { font-size: 0.95rem; color: var(--text-muted-light); margin:0; }

        /* ------------------- */
        /* --- Responsive Design --- */
        /* ------------------- */
        @media (min-width: 992px) {
            .hero .container {
                grid-template-columns: 1fr 1fr;
            }
            .hero-text {
                text-align: left;
                order: 2; /* Inverte a ordem */
            }
            .hero-mockup-wrapper {
                order: 1; /* Inverte a ordem */
            }
            .hero-text p {
                margin-left: 0;
            }
            .steps-grid { grid-template-columns: repeat(3, 1fr); }
            .testimonials-grid { grid-template-columns: repeat(2, 1fr); }
        }
        
        @media (min-width: 768px) {
             .testimonials-grid { grid-template-columns: 1fr; }
        }

        @media (max-width: 767px) {
            .main-nav { display: none; }
            body { font-size: 16px; }
            h1 { font-size: 2.5rem; }
            h2 { font-size: 2rem; }
        }
    </style>
</head>
